<div class="container">
  <div class="row">
    <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <%= link_to "View", book_path(book), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <% end %>
 </div>
</div>