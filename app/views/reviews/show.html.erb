<h1> <%= @review.book.title %> </h1>
<h2>Review by: <%= @review.user.full_name %></h2>
<h2> <%= show_stars(@review.stars) %> </h2>
<h3>Comments: </h3>
<p><%= @review.comments %></p>
<% if @current_user == @review.user %>
    <%= link_to "Edit Review", edit_review_path( @review) %>
    <%= form_tag review_path(@review), method: "delete", data: { confirm: "Are you sure you want to delete this review?" } do %>
        <%= submit_tag "Delete", class: 'btn btn-danger' %>
    <% end %> 
<% end %>
