<% title 'Log In' %>

  <h1 class="text-center">Log In</h1>
      <%# if flash[:notice] %>
        <%# <div class="alert alert-info" role="alert">  %>
          <%# flash[:alert] %>
        <%# </div> %>
      <%# end %>
  <%= form_tag login_path, class: 'form-horizontal' do %>

    <div class="form-group row justify-content-center">
      <%= label_tag :email, nil ,class: "col-md-2 col-form-label" %>

      <div class="col-md-7">
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= label_tag :password, nil ,class: "col-md-2 col-form-label" %>

      <div class=" col-md-7">
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class='col-md-9'>
        <%= submit_tag "Sign In", class: 'form-control btn btn-success ' %>
      </div>
    </div>
    <div class='row justify-content-center'>
      <%= link_to('Facebook Login', '/auth/facebook', class: "btn btn-info") %>
    </div>
  <% end %>